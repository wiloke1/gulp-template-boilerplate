{% import "../../shared/textBox/textBox.twig" as textBox %}
{% assign heading = 'Feature section' %}

<section data-id="{{ uniqueId }}" class="section">
  <div class="container">
    <h1>{{ heading }}</h1>
    <div class="row">
      {% for item in featureSection %}
        <div class="col" style="--col-xs: 12; --col-sm: 6; --col-md: 4">
          {{ textBox.render({ title: item.title, text: item.text }) }}
        </div>
      {% endfor %}
    </div>
  </div>
</section>
